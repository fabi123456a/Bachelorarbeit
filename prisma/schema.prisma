// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// INFO: taballen name in singular

model User {
  id        String     @id 
  loginID   String  @unique
  password  String?
  readOnly  Boolean  
  chatEntry ChatEntry[]
  session Session[]
}

model Scene {
  id             String     @id 
  idUserCreater  String 
  name           String
  createDate     DateTime
  path           String
}

model Session {
  id        String     @id 
  idUser    String
  startDate DateTime
  user      User       @relation(fields: [idUser], references: [id])
}

model ChatEntry {
  id      String     @id 
  idScene String
  idUser  String     
  message String
  datum   DateTime
  user    User       @relation(fields: [idUser], references: [id])
}

model Feedback {
  id    String     @id 
  text  String
}

